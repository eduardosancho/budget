<h2 class='text-center mt-2'>Categories List</h2>
<div class='categories-list'>
  <ul class='list-group d-flex flex-column'>
    <% @categories.each do |category| %>
      <%= render 'category_card', category: category %>
    <% end %>
    <%= categories? %>
  </ul>
</div>
<footer class="footer vw-100 py-3 bg-secondary fixed-bottom">
  <div class='d-flex justify-content-center'>
    <%= link_to 'Create category', new_category_path, class:'btn btn-outline-light w-75' %>
  </div>
</footer>